    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
     
        
        try {
            leer_xml();
        } catch (Exception ex) {
                   JOptionPane.showMessageDialog(null, "Ruta Incorrecta o el archivo no existe", "ERROR", JOptionPane.ERROR_MESSAGE);
        }

    }                                        

