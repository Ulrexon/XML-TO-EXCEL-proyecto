    // Lee nuestro fichero XML y va colocando la informacion que sacamos dentro del worbook
     public  void leer_xml() throws Exception{
         
         //Creamos la variable entrada donde colocaremos los datos y la variable alumnos donde guardaremos los datos para pasarlos a entrada
             String [][] entrada= new String[6][6];
             List<String> alumnos = new ArrayList<>();
             
             
             int p=0;
             int n= 0;
              
              
       File inputFile = new File(txt_ruta.getText());
        
        DocumentBuilderFactory dbFactory = DocumentBuilderFactory.newInstance();
        DocumentBuilder dBuilder = null;
        
        try {
            dBuilder = dbFactory.newDocumentBuilder();
        } catch (ParserConfigurationException ex) {
            Logger.getLogger(Projecto.class.getName()).log(Level.SEVERE, null, ex);
        }
        Document doc = null;
        
        try {
            doc = dBuilder.parse(inputFile);
        } catch (SAXException ex) {
            Logger.getLogger(Projecto.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(Projecto.class.getName()).log(Level.SEVERE, null, ex);
        }
        
        
//doc.getDocumentElement().normalize();

//Aqui sacamos el elemento Raiz
                System.out.println("Elemento raiz :" + doc.getDocumentElement().getNodeName());
                NodeList nList = doc.getElementsByTagName("alumno");

       
//Bucle para ir sacando los datos
for (int i = 0; i < nList.getLength(); i++) {
    System.out.println("----------------------------");
    Node nNode = nList.item(i);
    
    if (nNode.getNodeType() == Node.ELEMENT_NODE) {
        Element eElement = (Element) nNode;
        
        //Obtener el valor de un atributo:
        System.out.println("Estudiante número:" + eElement.getAttribute("num"));
        
        //Obtener el contenido de una etiqueta
        System.out.println("Nombre : " + eElement.getElementsByTagName("nombre").item(0).getTextContent());
        System.out.println("Calificacion : " + eElement.getElementsByTagName("calificacion").item(0).getTextContent());
       
        
        
        // guardo el contenido en variables para luego colocarlas en el Excel
        String estudiante = eElement.getAttribute("num");
        String nombre = eElement.getElementsByTagName("nombre").item(0).getTextContent();
        String calificacion = eElement.getElementsByTagName("calificacion").item(0).getTextContent();
        
        

        
        //voy guardando el contenido de el xml en un arraylist de Strings
        alumnos.add(estudiante);
        alumnos.add(nombre);
        alumnos.add(calificacion);

       
       
        
    }
      
}        

        
        entrada[0][1]="ID ESTUDIANTE";
        entrada[0][2]="NOMBRE";
        entrada[0][3]="CALIFICACION";
        
//Vamos guardando los datos dentro de entrada
            

    for(int i=1;i<=alumnos.size()/3;i++)
    {
      
     
            entrada[i][1]= alumnos.get(p);
            p++;
            entrada[i][2]= alumnos.get(p);
            p++;
            entrada[i][3]= alumnos.get(p);
            p++;
        
   
            
    }
    

            
        
        
        
        JOptionPane.showMessageDialog(null, "Operación realizada correctamente"); 
       
        txt_ruta.setText("");
        
              
        
     

//Creamos el fichero Excel llamado Alumnos.xls
File fichero = new File( "Alumnos.xls" );


//ruta del archivo Excel
String ruta="Alumnos.xls";

		try {
                    
                    
                    
                   
			WorkbookSettings conf=new WorkbookSettings();
			
			conf.setEncoding("ISO-8859-1");
			
			WritableWorkbook workbook = Workbook.createWorkbook(new File(ruta),conf);
                        
                        
			//Aqui nos situamos en la pagina 0 del Excel
                        
			WritableSheet sheet= workbook.createSheet("resultado", 0);
                        
                        //Le damos un estilo a nuestro Excel
			
			WritableFont h = new WritableFont(WritableFont.COURIER,16,WritableFont.NO_BOLD);
			
			
			WritableCellFormat hFormat = new WritableCellFormat(h);
			
			
                        
                        //Vamos cargando los datos 
                        
			for (int i=0; i< entrada.length;i++) {
				
				for(int j=0; j<entrada[i].length;j++) { 
					
					
					
					
   	sheet.addCell(new jxl.write.Label(j,i,entrada[i][j],hFormat));
			 
					
				
				
				}
				}
			
                        //Pasamos los datos al archivo Excel que tenemos creado 
			workbook.write();
			workbook.close();
                      }catch (IOException ex) {
			
		}
        
        
 
       }
     
     
     
     //Inicializamos el Excel
     


